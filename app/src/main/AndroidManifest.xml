<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group1.EngPlan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CentralActivity"
            android:label="@string/title_activity_central"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".MakeAPlan.NumberOfCoursesScreen" />
        <activity android:name=".MakeAPlan.PassFailScreen" />
        <activity android:name=".MakeAPlan.MakeAPlanYearScreen" />
        <activity
            android:name=".CourseDetails"
            android:label="Course Details" />
        <activity
            android:name=".QuickView"
            android:label="@string/title_activity_quick_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewSched"
            android:label="My Saved Schedule"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <uses-library android:name="android.test.runner"
            android:required="false" />
    </application>

</manifest>